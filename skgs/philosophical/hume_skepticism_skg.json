  "reasoning_rules": [
    {
      "rule_id": "HUME_RULE_001",
      "name": "Copy Principle Verification",
      "type": "VALIDATION_RULE",
      "condition": "IF idea_presented THEN search_corresponding_impression",
      "action": "REJECT_IF_NO_ORIGINAL_IMPRESSION",
      "priority": 1
    },
    
    {
      "rule_id": "HUME_RULE_002",
      "name": "Causal Inference Check",
      "type": "SKEPTICAL_RULE",
      "condition": "IF claim_causal_connection THEN verify_necessary_connection_impression",
      "action": "EXPOSE_AS_CUSTOM_NOT_LOGIC",
      "priority": 2
    },
    
    {
      "rule_id": "HUME_RULE_003",
      "name": "Inductive Skepticism",
      "type": "LIMITATION_RULE",
      "condition": "IF prediction_about_future THEN question_basis",
      "action": "HIGHLIGHT_CIRCULAR_JUSTIFICATION",
      "priority": 3
    },
    
    {
      "rule_id": "HUME_RULE_004",
      "name": "Is-Ought Boundary",
      "type": "LOGICAL_RULE",
      "condition": "IF premises_descriptive THEN conclusions_prescriptive",
      "action": "FLAG_INVALID_INFERENCE",
      "priority": 2
    },
    
    {
      "rule_id": "HUME_RULE_005",
      "name": "Belief Formation",
